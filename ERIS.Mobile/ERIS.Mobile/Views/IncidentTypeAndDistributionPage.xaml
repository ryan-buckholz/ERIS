<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ERIS.Mobile.Views.IncidentTypeAndDistributionPage">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Text="Incident Type" FontSize="Medium" Grid.Row="0" Grid.Column="0" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalOptions="Center" TextDecorations="Underline"></Label>
                <Label Text="Distribution" FontSize="Medium" Grid.Row="0" Grid.Column="1" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalOptions="Center" TextDecorations="Underline"></Label>
            </Grid>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <!-- The following objects correspond to the *Incident Type* section of the ERIS assessment -->
                <CheckBox x:Name="RockFallCheckBox" CheckedChanged="RockFallCheckBox_CheckedChanged" Grid.Row="0" Grid.Column="0" HorizontalOptions="Center"></CheckBox>
                <Label Text="(Rock) Fall" FontSize="Medium" Grid.Row="0" Grid.Column="1" VerticalOptions="Center"></Label>

                <CheckBox x:Name="ToppleCheckBox" CheckedChanged="ToppleCheckBox_CheckedChanged" Grid.Row="1" Grid.Column="0" HorizontalOptions="Center"></CheckBox>
                <Label Text="Topple" FontSize="Medium" Grid.Row="1" Grid.Column="1" VerticalOptions="Center"></Label>

                <CheckBox x:Name="SlideCheckBox" CheckedChanged="SlideCheckBox_CheckedChanged" Grid.Row="2" Grid.Column="0" HorizontalOptions="Center"></CheckBox>
                <Label Text="Slide" FontSize="Medium" Grid.Row="2" Grid.Column="1" VerticalOptions="Center"></Label>

                <CheckBox x:Name="SpreadCheckBox" CheckedChanged="SpreadCheckBox_CheckedChanged" Grid.Row="3" Grid.Column="0" HorizontalOptions="Center"></CheckBox>
                <Label Text="Spread" FontSize="Medium" Grid.Row="3" Grid.Column="1" VerticalOptions="Center"></Label>

                <CheckBox x:Name="FlowCheckBox" CheckedChanged="FlowCheckBox_CheckedChanged" Grid.Row="4" Grid.Column="0" HorizontalOptions="Center"></CheckBox>
                <Label Text="Flow" FontSize="Medium" Grid.Row="4" Grid.Column="1" VerticalOptions="Center"></Label>

                <CheckBox x:Name="CompoundCheckBox" CheckedChanged="CompoundCheckBox_CheckedChanged" Grid.Row="5" Grid.Column="0" HorizontalOptions="Center"></CheckBox>
                <Label Text="Compound" FontSize="Medium" Grid.Row="5" Grid.Column="1" VerticalOptions="Center"></Label>

                <CheckBox x:Name="ErosionCheckBox" CheckedChanged="ErosionCheckBox_CheckedChanged" Grid.Row="6" Grid.Column="0" HorizontalOptions="Center"></CheckBox>
                <Label Text="Erosion" FontSize="Medium" Grid.Row="6" Grid.Column="1" VerticalOptions="Center"></Label>

                <CheckBox x:Name="SurfacialSloughingCheckBox" CheckedChanged="SurfacialSloughingCheckBox_CheckedChanged" Grid.Row="7" Grid.Column="0" HorizontalOptions="Center"></CheckBox>
                <Label Text="Surfacial Sloughing" FontSize="Medium" Grid.Row="7" Grid.Column="1" VerticalOptions="Center"></Label>

                <CheckBox x:Name="ScouredToeCheckBox" CheckedChanged="ScouredToeCheckBox_CheckedChanged" Grid.Row="8" Grid.Column="0" HorizontalOptions="Center"></CheckBox>
                <Label Text="Scoured Toe" FontSize="Medium" Grid.Row="8" Grid.Column="1" VerticalOptions="Center"></Label>

                <CheckBox x:Name="WashoutCheckBox" CheckedChanged="WashoutCheckBox_CheckedChanged" Grid.Row="9" Grid.Column="0" HorizontalOptions="Center"></CheckBox>
                <Label Text="Washout" FontSize="Medium" Grid.Row="9" Grid.Column="1" VerticalOptions="Center"></Label>

                <Entry Placeholder="Others" TextColor="Black" PlaceholderColor="Black" Grid.Row="10" Grid.Column="1"></Entry>

                <!-- The following objects correspond to the *Distribution* section of the ERIS assessment -->
                <CheckBox x:Name="AdvancingCheckBox" CheckedChanged="AdvancingCheckBox_CheckedChanged" Grid.Row="0" Grid.Column="2" HorizontalOptions="Center"></CheckBox>
                <Label Text="Advancing" FontSize="Medium" Grid.Row="0" Grid.Column="3" VerticalOptions="Center"></Label>

                <CheckBox x:Name="RetrogressingCheckBox" CheckedChanged="RetrogressingCheckBox_CheckedChanged" Grid.Row="1" Grid.Column="2" HorizontalOptions="Center"></CheckBox>
                <Label Text="Retrogressing" FontSize="Medium" Grid.Row="1" Grid.Column="3" VerticalOptions="Center"></Label>

                <CheckBox x:Name="EnlargingCheckBox" CheckedChanged="EnlargingCheckBox_CheckedChanged" Grid.Row="2" Grid.Column="2" HorizontalOptions="Center"></CheckBox>
                <Label Text="Enlarging" FontSize="Medium" Grid.Row="2" Grid.Column="3" VerticalOptions="Center"></Label>

                <CheckBox x:Name="WideningCheckBox" CheckedChanged="WideningCheckBox_CheckedChanged" Grid.Row="3" Grid.Column="2" HorizontalOptions="Center"></CheckBox>
                <Label Text="Widening" FontSize="Medium" Grid.Row="3" Grid.Column="3" VerticalOptions="Center"></Label>

                <CheckBox x:Name="MovingCheckBox" CheckedChanged="MovingCheckBox_CheckedChanged" Grid.Row="4" Grid.Column="2" HorizontalOptions="Center"></CheckBox>
                <Label Text="Moving" FontSize="Medium" Grid.Row="4" Grid.Column="3" VerticalOptions="Center"></Label>

                <CheckBox x:Name="ConfinedCheckBox" CheckedChanged="ConfinedCheckBox_CheckedChanged" Grid.Row="5" Grid.Column="2" HorizontalOptions="Center"></CheckBox>
                <Label Text="Confined" FontSize="Medium" Grid.Row="5" Grid.Column="3" VerticalOptions="Center"></Label>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>