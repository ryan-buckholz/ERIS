<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ERIS.Mobile.Views.RecommendedImmediateActionsP2"
             BackgroundColor="{StaticResource AssessmentBackgroundColor}">
    <ContentPage.Content>
        <StackLayout>

            <Grid RowDefinitions="50" ColumnDefinitions="*">
                <Label Text="Recommended Immediate Actions Page 2" Grid.Row="0" Grid.Column="0" FontSize="Medium" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalOptions="Center" TextDecorations="Underline" TextColor="Black"></Label>
            </Grid>

            <Grid RowDefinitions="*, *, *, *, 50, *, *, *" ColumnDefinitions="50, Auto">
                <CheckBox x:Name="DewaterWithPumpCheckbox" CheckedChanged="Dewater_With_Pump_CheckBox_CheckedChanged" Grid.Row="0" Grid.Column="0" HorizontalOptions="Center" Color="Black"></CheckBox>
                <Label Text="Dewater with Pump, Trench, etc." FontSize="Medium" Grid.Row="0" Grid.Column="2" VerticalOptions="Center" TextColor="Black"></Label>

                <CheckBox x:Name="DewaterWithHorizontalDrains" CheckedChanged="Dewater_With_Horizontal_Drains_CheckBox_CheckedChanged" Grid.Row="1" Grid.Column="0" HorizontalOptions="Center" Color="Black"></CheckBox>
                <Label Text="Dewater with Horizontal Drains" FontSize="Medium" Grid.Row="1" Grid.Column="2" VerticalOptions="Center" TextColor="Black"></Label>

                <CheckBox x:Name="ConstructTempShoringCheckBox" CheckedChanged="Construct_Temp_Shoring_CheckBox_CheckedChanged" Grid.Row="2" Grid.Column="0" HorizontalOptions="Center" Color="Black"></CheckBox>
                <Label Text="Construct Temporary Shoring" FontSize="Medium" Grid.Row="2" Grid.Column="2" VerticalOptions="Center" TextColor="Black"></Label>

                <CheckBox x:Name="ButtressToeOfLandslideCheckBox" CheckedChanged="Buttress_Toe_of_Landslide_CheckBox_CheckedChanged" Grid.Row="3" Grid.Column="0" HorizontalOptions="Center" Color="Black"></CheckBox>
                <Label Text="Buttress Toe of Landslide" FontSize="Medium" Grid.Row="3" Grid.Column="2" VerticalOptions="Center" TextColor="Black"></Label>

                <CheckBox x:Name="PlaceRockProtectionCheckBox" CheckedChanged="Place_Rock_Protection_CheckBox_CheckedChanged" Grid.Row="4" Grid.Column="0" HorizontalOptions="Center" Color="Black"></CheckBox>
                <Label Text="Place Rock Slope Protection (ref. Manual)" FontSize="Medium" Grid.Row="4" Grid.Column="2" VerticalOptions="Center" TextColor="Black"></Label>

                <CheckBox x:Name="RoutineVisualMonitorCheckBox" CheckedChanged="Routine_Visual_Monitor_CheckBox_CheckedChanged" Grid.Row="5" Grid.Column="0" HorizontalOptions="Center" Color="Black"></CheckBox>
                <Label Text="Routine Visual Monitor" FontSize="Medium" Grid.Row="5" Grid.Column="2" VerticalOptions="Center" TextColor="Black"></Label>

                <CheckBox x:Name="ReconSlopeToOriginalCheckBox" CheckedChanged="Recon_Slope_To_Original_CheckBox_CheckedChanged" Grid.Row="6" Grid.Column="0" HorizontalOptions="Center" Color="Black"></CheckBox>
                <Label Text="Reconstruct Slope to Original Condition" FontSize="Medium" Grid.Row="6" Grid.Column="2" VerticalOptions="Center" TextColor="Black"></Label>

                <CheckBox x:Name="ReconSlopeGeoCheckBox" CheckedChanged="Recon_Slope_Geo_CheckBox_CheckedChanged" Grid.Row="7" Grid.Column="0" HorizontalOptions="Center" Color="Black"></CheckBox>
                <Label Text="Reconstruct Slope with Geosynthetics" FontSize="Medium" Grid.Row="7" Grid.Column="2" VerticalOptions="Center" TextColor="Black"></Label>

            </Grid>


            <StackLayout Style="{StaticResource ButtonStack}">
                <Button Text="Save" Style="{StaticResource AssessmentButton}"></Button>
                <Button Text="Next" Style="{StaticResource AssessmentButton}" Clicked="Next_Button_Clicked"></Button>
                <Button Text="Back" Style="{StaticResource AssessmentButton}" Clicked="Back_Button_Clicked"></Button>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>