<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ERIS.Mobile.Views.GeneralReportInfoPart3Page"
             BackgroundColor="#F8F0E3">
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <Label HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Geotechnical Site Assessment" TextColor="Black" FontSize="Large" FontAttributes="Bold"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Label HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="DISTRICT CONTACT" TextColor="Black" FontSize="Large"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>


            <Entry  Placeholder="Last Name:" TextColor="Black" PlaceholderColor="Black"></Entry>
            <Entry  Placeholder="First Name:" IsPassword ="True" TextColor="Black" PlaceholderColor="Black"></Entry>
            <Entry  Placeholder="S Number:" TextColor="Black" PlaceholderColor="Black"></Entry>
            <Entry  Placeholder="Phone:" IsPassword ="True" TextColor="Black" PlaceholderColor="Black"></Entry>
            <Entry  Placeholder="Cell Phone:" TextColor="Black" PlaceholderColor="Black"></Entry>

            <Button 
                VerticalOptions= "Start"
                Text="Save"    
                TextColor="Black"
                BackgroundColor="LightGray"
                BorderColor="Black"
                BorderWidth="1.5"
                CornerRadius="20"></Button>
            <Button 
                VerticalOptions= "End"
                Text="Next"    
                TextColor="Black"
                BackgroundColor="LightGray"
                BorderColor="Black"
                BorderWidth="1.5"
                CornerRadius="20"
                Clicked="Button_Clicked"></Button>
            <Button 
                VerticalOptions= "End"
                Text="Back"    
                TextColor="Black"
                BackgroundColor="LightGray"
                BorderColor="Black"
                BorderWidth="1.5"
                CornerRadius="20"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>