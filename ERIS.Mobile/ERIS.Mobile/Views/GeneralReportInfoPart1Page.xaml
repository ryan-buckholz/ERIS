<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ERIS.Mobile.Views.GeneralReportInfoPart1Page"
             BackgroundColor="{StaticResource AssessmentBackgroundColor}">
    <ContentPage.Content>
        <StackLayout Style="{StaticResource MainStackLayout}">
            <Label HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Site Location and Dates" TextColor="Black" FontSize="Large" FontAttributes="Bold"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
  
            <Entry  Placeholder="Site Visit Date (Todays Date):" TextColor="Black" PlaceholderColor="Gray"></Entry>
            <Entry  Placeholder="District:" IsPassword ="True" TextColor="Black" PlaceholderColor="Gray"></Entry>
            <Entry  Placeholder="County:" TextColor="Black" PlaceholderColor="Gray"></Entry>
            <Entry  Placeholder="Route:" IsPassword ="True" TextColor="Black" PlaceholderColor="Gray"></Entry>
            <Entry  Placeholder="Post Mile:" TextColor="Black" PlaceholderColor="Gray"></Entry>
            <Entry  Placeholder="Incident Date:" IsPassword ="True" TextColor="Black" PlaceholderColor="Gray"></Entry>
            <Entry  Placeholder="Latitude:" TextColor="Black" PlaceholderColor="Gray" x:Name="Latitude"></Entry>
            <Entry  Placeholder="Longitude:" TextColor="Black" PlaceholderColor="Gray" x:Name="Longitude"></Entry>

            <Button 
                VerticalOptions= "End"
                Text="Use Current Location for Long/Latitude"    
                TextColor="Black"
                BackgroundColor="LightGray"
                BorderColor="Black"
                BorderWidth="1.5"
                CornerRadius="20"
                Clicked="Geolocate_Clicked"></Button>
                <Entry  Placeholder="Site Visit Date (Todays Date):" TextColor="Black" PlaceholderColor="Gray"></Entry>
                <Entry  Placeholder="District:" IsPassword ="True" TextColor="Black" PlaceholderColor="Gray"></Entry>
                <Entry  Placeholder="County:" TextColor="Black" PlaceholderColor="Gray"></Entry>
                <Entry  Placeholder="Route:" IsPassword ="True" TextColor="Black" PlaceholderColor="Gray"></Entry>
                <Entry  Placeholder="Post Mile:" TextColor="Black" PlaceholderColor="Gray"></Entry>
                <Entry  Placeholder="Incident Date:" IsPassword ="True" TextColor="Black" PlaceholderColor="Gray"></Entry>
                <Button Text="Acquire Latitude/Longitude by phone" Style="{StaticResource AssessmentButton}" HeightRequest="35"></Button>
                <Entry  Placeholder="Latitude:" TextColor="Black" PlaceholderColor="Gray"></Entry>
                <Entry  Placeholder="Longitude:" TextColor="Black" PlaceholderColor="Gray"></Entry>


            <StackLayout Style="{StaticResource ButtonStack}">
                <Button Text="Save" Style="{StaticResource AssessmentButton}" HeightRequest="35"></Button>
                <Button Text="Next" Style="{StaticResource AssessmentButton}" Clicked="Next_Button_Clicked" HeightRequest="35"></Button>
            </StackLayout>
            


        </StackLayout>

    </ContentPage.Content>
</ContentPage>